<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myprofile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/button_background"
                android:text="My Profile"
                android:textColor="#FFFFFF"
                android:textSize="25dp"></Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="184dp"
                app:srcCompat="@drawable/ic_account_box_black_24dp"
                tools:ignore="VectorDrawableCompat">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="User Name"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

            </TextView>

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text"
                >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Full Name"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

            </TextView>

            <TextView
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Email"
                android:textColor="#263238"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Phone Number"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

            </TextView>

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="NIC number"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </TextView>

            <TextView
                android:id="@+id/nicNumber"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Relative-1 Name"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </TextView>

            <TextView
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Relative-1 Number"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
               >

            </TextView>

            <TextView
                android:id="@+id/r1_num"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Relative-2 Name"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </TextView>

            <TextView
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Relative-2 Number"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </TextView>

            <TextView
                android:id="@+id/r2_num"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Relative-3 Name"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

            </TextView>

            <TextView
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Relative-3 Number"
                android:textColor="#263238"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </TextView>

            <TextView
                android:id="@+id/r3_num"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/edit_text">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bottom_btn"
                    android:text="My Requests"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:onClick="my_requests"
                    tools:ignore="OnClick">

                </Button>

                <Button
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bottom_btn"
                    android:text="Edit Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:onClick="edit_profile"
                    tools:ignore="OnClick">

                </Button>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>