<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".request1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_background"
        android:text="My Requests"
        android:textColor="#FFFFFF"
        android:textSize="23dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginLeft="50dp"-->
<!--                android:layout_marginTop="40dp"-->
<!--                android:layout_marginRight="50dp"-->
<!--                android:text="Request 1"-->
<!--                android:textColor="#252121"-->
<!--                android:textSize="30sp">-->

<!--            </TextView>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request ID"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/requestId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="08dp"
                android:textSize="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Date and Time"
                android:layout_marginLeft="50dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="08dp"
                android:textSize="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police Station"
                android:layout_marginLeft="50dp"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/policeStation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="08dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of patiens"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/patients"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="08dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="08dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/requeststatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="08dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/reply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="08dp"
                android:textSize="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bottom_btn"
                android:text="Give Feedback"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:onClick="feedbk"
                tools:ignore="OnClick"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>